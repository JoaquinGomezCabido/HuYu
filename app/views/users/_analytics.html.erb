<div class='analytics'>

<br><br>
 <table class="table table-hover"> <h4>Leaderboard</h4>
  <tr class="table-active">
  <th scope="row"></th>
    <td> Username </td>
    <td> Games Played </td>
    <td> Games Won </td>
    <td> Percentage Won </td>
  </tr>
  
    <% User.winners.each do |user| %> 
  <tr class="table-primary">
  <th scope="row"></th>
    <td> <%= user.username %></td>
    <td> <%= user.games_played.count %></td>
    <td> <%= user.games_won %> </td>
    <td> <%= user.percentage_won.round(2) %>% </td>
  </tbody>
    <% end %>
</table>

</div>