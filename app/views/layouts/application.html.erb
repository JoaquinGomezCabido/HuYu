<!DOCTYPE html>
<html>
  <head>
    <title>Huyu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if session[:user_id] %>
    <%= button_to "Logout", '/logout', method: :delete %>   
  <% end %>

  <% if flash[:notice] %>
    <h4><%= flash[:notice] %></h4>   
  <% end %>

  <% if flash[:errors] %>
    <ul class='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %> 
    </ul>  
  <% end %>
    <%= yield %>
  </body>
</html>
